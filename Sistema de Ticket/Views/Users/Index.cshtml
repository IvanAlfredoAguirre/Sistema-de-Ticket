@{
    ViewData["Title"] = "Usuarios";
    var users = (IEnumerable<dynamic>)Model;
}

<h2>Usuarios</h2>

@if (TempData["ok"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success">@ok</div>
}
@if (TempData["err"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger">@err</div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Crear usuario</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th class="text-end" style="width:220px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in users)
        {
            string role = u.Role as string ?? "";
            <tr>
                <td>@u.UserName</td>
                <td>@u.NombreUsuario</td>
                <td>@u.Email</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(role))
                    {
                        <span class="badge bg-secondary">@role</span>
                    }
                </td>
                <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@u.Id">Editar</a>
                        <a class="btn btn-outline-danger"
                           asp-action="Delete"
                           asp-route-id="@u.Id"
                           onclick="return confirm('¿Eliminar usuario @u.UserName?');">
                            Eliminar
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
